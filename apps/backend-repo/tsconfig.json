{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist/lib",
    "rootDir": "./",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "shared/*": ["../../packages/shared/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}